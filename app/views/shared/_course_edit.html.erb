<div id="content">
  <div id="content-header">

<div class="row-fluid">
  <div class="span12">
<div class="widget-box">
  <div class="widget-title"> <span class="icon"> <i class="icon-align-justify"></i> </span>


    <h5>Edit Course Details</h5>
  </div>
  <div class="widget-content nopadding">
    <div class="form-horizontal">

      <div class="control-group">
        <%= form_for @courses do |f| %>
        <%= f.label :name, "Name :", class: "control-label" %>
        <div class="controls">
      <%= f.text_field :name, class: 'span11', autofocus: true, placeholder: 'Course Name', value: @courses.name %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :total_class_hour, "Total Class Hour :", class: "control-label" %>
        <div class="controls">
      <%= f.text_field :total_class_hour, class: 'span11', autofocus: true, placeholder: 'Total Class Hour', value: @courses.total_class_hour %>
        </div>
      </div>

      <div>
        <%= f.submit class: "btn btn-success"%>
      <% end %>
      <%= button_to 'Delete', course_path(@courses), method: :delete, class: "btn btn-success", confirm: 'Are you sure?' %>
    </div>

    </div>
  </div>
</div>
</div>
</div>
</div>
</div>
