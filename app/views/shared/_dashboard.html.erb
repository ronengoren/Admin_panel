<div id="content">


<!--Action boxes-->
  <div class="container-fluid">
    <div class="quick-actions_homepage">
      <ul class="quick-actions">
        <li class="bg_lb"> <a href="/dashboard/"> <i class="icon-dashboard"></i> My Dashboard </a> </li>
        <li class="bg_lg span3"> <a href="/cohorts/new"> <i class="icon-signal"></i> Add New Cohort</a> </li>
        <li class="bg_ly"> <a href="/students/new"> <i class="icon-inbox"></i> Add New Student </a> </li>
        <li class="bg_lo"> <a href="/courses/new"> <i class="icon-th"></i> Add New Course</a> </li>
        <li class="bg_ls"> <a href="/instructors/new"> <i class="icon-fullscreen"></i>Add New Instructor</a> </li>
        <li class="bg_lo span3"> <a href="form-common.html"> <i class="icon-th-list"></i> Forms</a> </li>
        <li class="bg_ls"> <a href="buttons.html"> <i class="icon-tint"></i> Buttons</a> </li>
        <li class="bg_lb"> <a href="interface.html"> <i class="icon-pencil"></i>Elements</a> </li>
        <li class="bg_lg"> <a href="calendar.html"> <i class="icon-calendar"></i> Calendar</a> </li>

      </ul>
    </div>

    <div class="row-fluid">
      <div class="span6">
      <div class="widget-box">

        <div class="widget-title bg_ly" data-toggle="collapse" ><span class="icon"><%= link_to "", new_task_path, remote: true, id: "ajaxcall", class: "icon-plus"%></span>
          <h5>Tasks</h5>
        </div>
        <div class="widget-content">
          <div class="todo">
            <ul>
              <div id="my-tasks">
                <div id="task-form" style="display:none;"></div>
              <% @tasks.each do |d| %>
              <div>
              <br>
              </div>
              <li class="clearfix" id="task-<%= d.id %>">
                <div class="txt"> <%= d.description %> <span class="by label"><%= d.name %></span></div>
                <div class="pull-right"><%= link_to '', edit_task_path(d.id), remote: true, class: "icon-pencil"  %>
                 <%= link_to "", {:controller => :dashboard, :action => 'destroy', :id => d.id }, :method => :delete, remote: true, class: "icon-remove" %>
                </div>
              </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
      </div>

    <div class="span6">

    <div class="widget-box">
      <div class="widget-title bg_ly" data-toggle="collapse" href="#collapseG2"><span class="icon"><i class="icon-chevron-down"></i></span>
        <h5>Recent Activity</h5>
      </div>
      <div class="widget-content nopadding collapse in" id="collapseG2">
        <ul class="recent-posts">
          <li>

            <div class="user-thumb"> <img width="40" height="40" alt="User" src="<%= image_path('/img/demo/av1.jpg') %>"> </div>
            <div class="article-post"> <span class="user-info"> By: john Deo / Date: 2 Aug 2012 / Time:09:27 AM </span>
              <p><a href="#">This is a much longer one that will go on for a few lines.It has multiple paragraphs and is full of waffle to pad out the comment.</a> </p>
            </div>
          </li>

          <li>
            <button class="btn btn-warning btn-mini">View All</button>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>
  </div>
</div>
</div>
<!--End-Action boxes-->
