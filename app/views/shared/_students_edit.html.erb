<div id="content">
  <div id="content-header">

<div class="row-fluid">
  <div class="span12">
<div class="widget-box">
  <div class="widget-title"> <span class="icon"> <i class="icon-align-justify"></i> </span>


    <h5>Edit student Details</h5>
  </div>
  <div class="widget-content nopadding">
    <div class="form-horizontal">

      <div class="control-group">
        <%= form_for @students do |f| %>
        <%= f.label :first_name, "First name :", class: "control-label" %>
        <div class="controls">
      <%= f.text_field :first_name, class: 'span11', autofocus: true, placeholder: 'First Name', value: @students.first_name %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :last_name, "Last name :", class: "control-label" %>
        <div class="controls">
      <%= f.text_field :last_name, class: 'span11', autofocus: true, placeholder: 'Last Name', value: @students.last_name %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :age, "Age :", class: "control-label" %>
        <div class="controls">
      <%= f.text_field :age, class: 'span11', autofocus: true, placeholder: 'Age', value: @students.age%>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :highest_education, "Highest Education :", class: "control-label" %>
        <div class="controls">
      <%= f.select :highest_education, options_for_select(["HS","College","Masters", "PHD"]), {}, class: "form-control", autofocus: true, prompt: true, value: @students.highest_education %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :cohort_id, "Change Cohort :", class: "control-label" %>
        <div class="controls">
          <%= f.collection_select(:cohort_id, Cohort.all, :id, :name_with_initial, prompt: true, class: "form-control", include_hidden: false, value: @students.cohort_id) %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :course_id, "Change Course :", class: "control-label" %>
        <div class="controls">
          <%= f.collection_select(:course_id, Course.all, :id, :name_with_initial, prompt: true, class: "form-control", include_hidden: false,  value: @students.course_id) %>
        </div>
          <%= f.hidden_field :user_id, value:current_user.id if current_user %>

      </div>
      <div>
        <%= f.submit class: "btn btn-success"%>
      <% end %>
      <%= button_to 'Delete', student_path(@students), method: :delete, class: "btn btn-success", confirm: 'Are you sure?' %>
    </div>

    </div>
  </div>
</div>
</div>
</div>
</div>
</div>
